{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "rootDir": "src",
    "paths": {
      "core/*": ["core/*"],
      "config/*": ["config/*"],
      "agents/*": ["agents/*"]
    },
    "typeRoots": [
      "../node_modules/@types",
      "src/@types"
    ],
    "types": [ "@types/jest" ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "removeComments": false,
    "lib": [
      "dom",
      "es5",
      "es2015.collection",
      "es2015.iterable"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "test/**",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
